<% provide(:title, 'Home') %>
<div class="center jumbotron">
  <% if !user_signed_in? %>
  <h1>My Debts</h1>
  <h2>
    by <%= link_to "Bobby LE", "http://www.bobbyle.net/" %></p>
  </h2>

  <%= link_to "Sign up now!", new_user_registration_path, class: "btn btn-large btn-primary" %>
  <% else %>
  <!-- THEY OWE YOU -->
  <h1>They owe you</h1>

  <table style="margin:auto;" id="theyoweyou_list">
    <thead>
      <tr>
        <th>Amount</th>
        <th>Person</th>
        <th>Comment</th>
        <th colspan="3"></th>
      </tr>
    </thead>

    <tbody>
      <% @total = 0 %>
      <% @theyoweyous.each do |theyoweyou| %>
      <% @total += theyoweyou.amount %>
        <tr>
          <td><%= theyoweyou.amount %></td>
          <td class="person"><%= theyoweyou.person %></td>
          <td><%= theyoweyou.comment %></td>
          <!--<td><%= link_to 'Show', theyoweyou %></td> -->
          <td><%= link_to 'Edit', edit_debt_path(theyoweyou) %></td>
          <td><%= link_to 'Destroy', theyoweyou, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_debt' %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <p id="new_debt_link">+</p>
  <%= render 'debts/form' %>
  <br />
  <br />
  <strong>Total : <%= number_to_currency(@total, locale: :fr) %></strong>
  <br />
  <!-- YOU OWE THEM -->
    <h1>You owe them</h1>

    <table style="margin:auto;">
      <thead>
        <tr>
          <th>Amount</th>
          <th>Person</th>
          <th>Youtothem</th>
          <th colspan="3"></th>
        </tr>
      </thead>

      <tbody>
        <% @total = 0 %>
        <% @youowethems.each do |youowethem| %>
        <% @total += youowethem.amount %>
          <tr>
            <td><%= youowethem.amount %></td>
            <td><%= youowethem.person %></td>
            <td><%= youowethem.youtothem %></td>
            <!--<td><%= link_to 'Show', youowethem %></td> -->
            <td><%= link_to 'Edit', edit_debt_path(youowethem) %></td>
            <td><%= link_to 'Destroy', youowethem, method: :delete, data: { confirm: 'Are you sure?' }, :remote => true, :class => 'delete_debt' %></td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%= link_to '+', new_debt_path %>
    <br />
    <br />
    <strong>Total : <%= number_to_currency(@total, locale: :fr) %></strong>

  <% end %>
</div>