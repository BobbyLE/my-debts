		$(this).remove();
		/* modify total */
		var total = 0;
		$('table#theyoweyou_list td.amount').each(function () {
			total += parseFloat($(this).text(),10);
		});
		console.log(total);
		$('#theyoweyou_total').delay(400).text(parseFloat(total,10)+" â‚¬");

	});
});
